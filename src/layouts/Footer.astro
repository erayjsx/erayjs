---
const data = await import("../api/config.json");
---

<footer
  class="flex gap-2 justify-center w-full items-center py-10 text-center text-black"
>
  <div
    class="justify-between w-full max-w-screen-lg max-lg:flex-col max-lg:gap-4 flex items-center"
  >
    <div
      class="bg-zinc-200 rounded-full items-center *:opacity-55 *:transition hover:*:opacity-100 flex px-2"
    >
      {
        data.default[0].social.map((item) => (
          <a
            href={item.href}
            target="_blank"
            title={item.title}
            class="flex h-14 w-14 items-center justify-center"
          >
            <i class={`${item.icon} text-2xl`} />
          </a>
        ))
      }
    </div>
    <div class="justify-end flex gap-2 *:opacity-55 text-right">
      <p>Developed by.</p>
      <a href="/" class="underline hover:opacity-100" title="Eray Can Topcu"
        >@erayjs</a
      >
    </div>
  </div>
</footer>
